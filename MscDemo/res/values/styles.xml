<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style
		name="SpeechApiButton"
		parent="@android:style/Widget.Button">
		<item
			name="android:background">@drawable/btn_bg</item>
		<item
			name="android:textAppearance">?android:textAppearanceLarge</item>
		<item
			name="android:textColor">@color/btn_fg</item>
	</style>
	<style
		name="SpeechApiWindowTitleBackground">
		<item
			name="android:background">@drawable/titlebar_bg</item>
	</style>
	<style
		name="SpeechApiWindowTitle">
		<item
			name="android:singleLine">true</item>
		<item
			name="android:textAppearance">?android:textAppearanceLarge</item>
	</style>
	<style
		name="SpeechApiPreferenceCategory">
		<item
			name="android:layout">@layout/preference_category</item>
		<item
			name="android:shouldDisableView">false</item>
		<item
			name="android:selectable">false</item>
	</style>
	<style
		name="PlaceHolderView">
		<item
			name="android:layout_width">0dip</item>
		<item
			name="android:layout_height">0dip</item>
		<item
			name="android:layout_weight">1</item>
		<item
			name="android:focusable">false</item>
	</style>
	<style
		name="CategoryTextView"
		parent="@android:style/Widget.TextView">
		<item
			name="android:textAppearance">?android:textAppearanceLargeInverse</item>
		<item
			name="android:textColor">#FF0D4E7F</item>
		<item
			name="android:background">#FFD5E1FB</item>
	</style>
	<style
		name="IntroductionTextView"
		parent="@android:style/Widget.TextView">
		<item
			name="android:textSize">@dimen/text_introduction_size</item>
		<item
			name="android:textColor">#FF000000</item>
	</style>
</resources>